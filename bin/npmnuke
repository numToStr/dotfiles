#!/bin/sh

inside_git_repo="$(git rev-parse --is-inside-work-tree 2>/dev/null)"

if [ "$inside_git_repo" ];
then
    read -p "Deleting node_modules. Confirm? (y/n) " -r CONFIRM

    if [[ $CONFIRM == "y" || $CONFIRM == "yes" ]] 
    then
        rm -rf "./**/node_modules"
        echo "Deleted :-)"
    else
        echo "Abort:: Cancelled"
    fi
else
    echo "Abort:: Not a git repo"
fi
